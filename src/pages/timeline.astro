    }

    .photo-item:nth-child(n) {
      left: auto !important;
      top: auto !important;
    }

    .single-photo .photo-item {
      width: 160px;
      height: 100px;
    }

    .photo-stack:hover .photo-item:not(:hover) {
      transform: scale(1);
      opacity: 1;
    }
  }

  @media (max-width: 480px) {
    .timeline-meta {
      gap: 0.75rem;
    }

    .timeline-flag {
      font-size: 1.25rem;
    }

    .timeline-title {
